<h1>Edit the Book: {{title}}</h1>
 
<form action="/books/edit/{{_id}}" method="post">
  <label> Title:
    <input type="text" name="title" value="{{title}}"/>
  </label>
 
  <label> Author:
    <input type="text" name="author" value="{{author}}"/>
  </label>
 
  <label> Description:
    <textarea name="description" cols="30" rows="4">{{description}}</textarea>
  </label>
 
  <label> Rate:
    <input type="number" name="rating" min="1" max="10" value="{{rating}}"/>
  </label>
 
  <button type="submit"> Save Changes </button>
</form>